{
  "env": {
    "browser": true,
    "es2021": true
  },
  
  "extends": [
    "plugin:prettier/recommended",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  
  "plugins": ["@typescript-eslint", "promise"],
  "rules": {
    "no-await-in-loop": "error",
      "prettier/prettier": [
        "error",
        {
          "tabWidth": 2,
          "printWidth": 80,
          "useTabs": false,
          "semi": true,
          "singleQuote": true,
          "trailingComma": "all",
          "arrowParens": "avoid",
          "endOfLine": "lf"
        }
      ],
      "generator-star-spacing": "off"
    }
}